<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="admin" id="1543412736052-5">
        <createTable tableName="payment_methods">
            <column autoIncrement="true" name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="payment_methods_pkey"/>
            </column>
            <column name="name_of_method" type="VARCHAR(255)"/>
            <column name="profile_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="admin" id="1543412736052-18">
        <loadData
                file="classpath:data/paymentMethods.csv"
                separator=","
                tableName="payment_methods">
            <column name="name_of_method" type="STRING"/>
            <column name="profile_id" type="NUMERIC"/>
        </loadData>
    </changeSet>
</databaseChangeLog>
